@import 'App.styl'
.footer
    width: 100%
    background-color: footer-color
    padding: 30px 0;
    color: white
    display: flex
    justify-content: space-around
    &__company
        width: 15%
        padding-left: 20px
        &--title
            margin-bottom: 5px
            color: footer-title-color
            & span
                color: secondary-color
        &--text
            font-size: 14px
            margin 0
    &__nav
        width: 55%
        padding-left: 20px
        display: flex
        align-content: flex-end
        & ul
            display: flex
            justify-content: flex-start
            align-items: center
            flex-wrap: wrap
            list-style: none
            & li
                font-size: 14px
                width: 25%
                text-transform: uppercase
                font-weight: bold
                letter-spacing: 2px
                &:hover
                    text-decoration: underline
                    text-decoration-color: white
                    cursor pointer
    &__contact
        width: 30%
        &--socialMedia
            width: 100%
            & ul
                list-style: none
                display: flex
                justify-content: space-around
                align-items: center
                & li img
                    cursor pointer
                    width: 20px
                    height 20px
                    filter: invert(0.4);
        &--subscribe
            width: 100%
            & input
                padding: 8.5px 10px
                width: 240px
                border none
            & button
                padding: 9px 15px
                font-size: 12px
                font-weight: bold
                text-transform: uppercase
                background-color: secondary-color
                border none
                color: white
                cursor pointer
                letter-spacing: 2px


